*{
    margin:  0;
    padding: 0;
    list-style: none;
}

body{
    background: url("../image/background.jpg") no-repeat;
    background-size: cover;
}
ul{
    height: 200px;
    width: 200px;
    position: absolute;
    bottom: 150px;
    left: 50%;
    margin-left: -100px;
    transform-style: preserve-3d;
    animation: sport 10s linear 0s infinite normal;
}
@keyframes sport {
    from{
        transform: rotateX(-10deg)  rotateY(0deg) ;
    }
    to{
    transform:rotateX(-10deg)  rotateY(360deg);
    }
}
ul img{
    height: 200px;
    width: 200px;
    border: 5px solid #ff8f85;
    box-sizing: border-box;
}
ul li{
    width: 200px;
    height: 200px;
    position: absolute;
    top: 0px;
    left: 0px;
}
ul li:nth-child(1){
    transform: rotateY(60deg) translateZ(188px);
}
ul li:nth-child(2){
    transform: rotateY(120deg) translateZ(188px);
}
ul li:nth-child(3){
    transform: rotateY(180deg) translateZ(188px);
}
ul li:nth-child(4){
    transform: rotateY(240deg) translateZ(188px);
}
ul li:nth-child(5){
    transform: rotateY(300deg) translateZ(188px);
}
ul li:nth-child(6){
    transform: rotateY(360deg) translateZ(188px);
}
ul:hover {
    animation-play-state: paused ;
}
ul:hover img{
    opacity: 0.6;
}
li:hover img{
    opacity: 1;
}


